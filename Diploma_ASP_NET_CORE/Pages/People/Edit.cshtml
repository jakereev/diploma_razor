@page "{id:int}"
@model Diploma_ASP_NET_CORE.Pages.People.EditModel
@{
    ViewData["Title"] = "Редагування користувача";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Student.Id" type="hidden" />
    <div>
        <label>Ім'я</label>
        <div>
            <input asp-for="Student.Name" />
            <span asp-validation-for="Student.Name"></span>
        </div>
    </div>
    <div>
        <label>Вiк</label>
        <div>
            <input asp-for="Student.Age" type="number" />
            <span asp-validation-for="Student.Age"></span>
        </div>
    </div>
    <div>
        <label>Рiвень знань</label>
        <div>
            <input asp-for="Student.Level" />
            <span asp-validation-for="Student.Level"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>